@model ShopBanHang.Models.SanPham

@{
    ViewBag.Title = "xemChiTiet";
    Layout = "~/Views/Shared/_LayoutKhach1.cshtml";
}

<h2>Xem chi tiết sản phẩm</h2>
<div><img src="~/Assit/img/@Model.anh" alt="Alternate Text" /></div>

<div>Tên sản phẩm: @Model.tenSP</div>
