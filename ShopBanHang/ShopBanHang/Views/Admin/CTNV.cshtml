@model ShopBanHang.Models.Admin

@{
    ViewBag.Title = "CTNV";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Admin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.userAdmin)

        <div class="form-group">
            @Html.LabelFor(model => model.passAdmin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10"> 
                @*@Html.EditorFor(model => model.passAdmin, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="password" name="passAdmin",id="passAdmin" value="" class="class="form-control text-box single-line"" />
                @Html.ValidationMessageFor(model => model.passAdmin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tenAdmin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenAdmin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenAdmin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


