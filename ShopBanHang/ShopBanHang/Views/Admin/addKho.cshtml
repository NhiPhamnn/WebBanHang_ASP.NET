@model ShopBanHang.Models.CTTonKho

@{
    ViewBag.Title = "addKho";
    Layout = "~/Views/Shared/_LayoutAdminKho.cshtml";
}



<div style="width:50%;height:auto;margin-top:20px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="color:#0026ff">Kho</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Mã Kho
                <div class="col-md-10">

                    @Html.DropDownList("maKho")
                </div>
            </div>



            <div class="form-group">
                Số Lượng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo Mới" class="btn btn-secondary" style="margin-top:15px;margin-bottom:15px;" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
   
