@model ShopBanHang.Models.Admin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdminCT.cshtml";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />



                    <div class="form-group">
                      
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-6">
                                Tài khoản
                                @Html.EditorFor(model => model.userAdmin, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                       
                    </div>

                    <div class="form-group">
                       
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-6">
                                Mật khẩu
                                <input class="form-control text-box single-line" id="matKhau" name="matKhau" type="password" value="">
                            </div>
                        </div>
                      
                        <span style="color:red;"> @ViewBag.Loi1</span>
                        <span style="color:red;"> @ViewBag.Loi2</span>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                        </div>
                        
                    </div>
                </div>
                }

