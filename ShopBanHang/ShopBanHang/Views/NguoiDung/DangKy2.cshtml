@model ShopBanHang.Models.ModelUser

@{
    ViewBag.Title = "DangKy2";
    Layout = "~/Views/Shared/_LayoutTrangChuNewNoAd.cshtml";
}

<div style="width:50%;height:auto;">
    <h2 style="color:rebeccapurple">Đăng Ký Khách Hàng</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @ViewBag.Error
            <p style="color:red;">@ViewBag.thongBao</p>
            <div class="form-group">
                Họ và tên khách hàng
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenKH, "", new { @class = "text-danger" })
                    @ViewBag.tb

                </div>
            </div>

            <div class="form-group">
                Địa Chỉ
                <div class="col-md-10">
                    @Html.EditorFor(model => model.diaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                Email
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Số Điện Thoại
                <div class="col-md-10">
                    @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                UserName
                <div class="col-md-10">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Password
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Nhập Lại Password
                <div class="col-md-10">
                    @Html.EditorFor(model => model.confirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.confirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group" style="margin-top:15px;margin-bottom:15px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo Tài Khoản" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

</div>
