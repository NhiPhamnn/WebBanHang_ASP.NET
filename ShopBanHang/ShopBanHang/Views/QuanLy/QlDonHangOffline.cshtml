@model IEnumerable<ShopBanHang.Models.HDOffLine>

@{
    ViewBag.Title = "QlDonHangOffline";
    Layout = "~/Views/Shared/_LayoutAdminCT.cshtml";
}


<div style="width:70%">
    <table class="table">
        <tr>
            <th>
                Ngày mua hàng
            </th>
            <th>
                Tên khách hàng 
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayMua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KhachHang.tenKH)
