@model ShopBanHang.Models.SanPham

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutAdminCT.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>

@using (Html.BeginForm("Add","QuanLy",FormMethod.Post,new { @enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>SanPham</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Tên sản phẩm
        <div class="col-md-10">
            @Html.EditorFor(model => model.tenSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tenSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.loaiSP, new { htmlAttributes = new { @class = "form-control" } }
                )*@

            @Html.DropDownListFor(x => x.maLoai, new[]
  {
      new SelectListItem(){Text="Dien thoai",Value="1"},
      new SelectListItem(){Text="Laptop",Value="2"},
      new SelectListItem(){Text="Dong ho",Value="3"},
      new SelectListItem(){Text="Camera",Value="4"}
  })



        </div>
    </div>





    <div class="form-group">
       
        <div class="col-md-10">
            <input type="file" name="fileUp" onchange="previewFile()" value="" />
        </div>
        @ViewBag.ThongBao
    </div>

    <div class="form-group">
        Mã Hãng
        <div class="col-md-10">

            @Html.DropDownList("maHang")


        </div>
    </div>
    <div class="form-group">

        <div class="col-md-10">

            <img src="~/Assit/img/product.png" alt="Alternate Text" />


        </div>
    </div>



    <div class="form-group">
        Gía sản phẩm
        <div class="col-md-10">
            @Html.EditorFor(model => model.giaSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.giaSP, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        Mô tả sản phẩm
        <div class="col-md-10">
            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

    
   
<script>
    function previewFile() {
        var preview = document.querySelector('img');
        var file = document.querySelector('input[type=file]').files[0];
        var reader = new FileReader();

        reader.addEventListener("load", function () {
            preview.src = reader.result;
        }, false);

        if (file) {
            reader.readAsDataURL(file);
        }
    }
</script>
  
