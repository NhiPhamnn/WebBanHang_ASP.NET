@model IEnumerable<ShopBanHang.Models.HDTraGop>

@{
    ViewBag.Title = "TaoPhieuTraGop2";
    Layout = "~/Views/Shared/_LayoutAdminCT.cshtml";
}


<table class="table">
    <tr>
        <th>
            Ngày Cọc
        </th>
        <th>
            Tiền Cọc
        </th>
        <th>
            Số tháng
        </th>
        <th>
            Lãi Xuất
        </th>
        <th>
            Tên khách hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TienCoc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoThang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.laiSuat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.tenKH)
        </td>
        <td>
           
           <a href="@Url.Action("TraGop","QuanLy",new { @id=item.MaHD})">Chon</a>
           
        </td>
    </tr>
}

</table>
