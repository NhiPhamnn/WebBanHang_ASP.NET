@model IEnumerable<ShopBanHang.Models.HDTraGop>
@{
    ViewBag.Title = "QLDonHangOnline";
    Layout = "~/Views/Shared/_LayoutAdminCT.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NgayCoc)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.KhachHang.tenKH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCoc)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.tenKH)
            </td>
            <td>
                @Html.ActionLink("Xem chi tiết", "XemCTHDTG", new { mahd = item.MaHD })
            </td>

        </tr>
    }

</table>
