@model IEnumerable<ShopBanHang.Models.TinNhan>

@{
    ViewBag.Title = "Mess";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<table class="table">
    @foreach (var item in Model)
    {

        if (item.idGui != 4)
        {
            <tr>
                <td style="background-color: #AAAAAA; border-radius:15px 15px 15px 15px">@Html.DisplayFor(m => item.Mess)</td>
            </tr>
        }

        else
        {
            <tr>
                <td></td>
                <td style="background-color:#6699FF;margin-left:30px;border-radius:15px 15px 15px 15px">@Html.DisplayFor(m => item.Mess)</td>
            </tr>
        }

    }


</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.TextBox("TinNhan")
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Gửi" class="btn btn-default" />
            </div>
        </div>
    </div>
}



