@model ShopBanHang.MultiData.MultiDataa

@{
    ViewBag.Title = "DonHangChuaGiao";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@{ WebGrid obj = new WebGrid(source: Model.donhang, canPage: true, rowsPerPage: 10);}@obj.GetHtml(tableStyle: "table table-bordered table-hover",
alternatingRowStyle: "info", columns: obj.Columns(
obj.Column("maDH", "Mã"),
obj.Column("daThanhToan", "Thanh toán"),
obj.Column("tinhTrang", "tình trạng"),
obj.Column("ngayDat", "Ngày đặt"),
obj.Column("ngayGiao", "Ngày giao"),
obj.Column("maKH", "Mã KH"),
obj.Column(format: (item) => Html.ActionLink("Chi tiết", "XemChiTietDonHang", new { madh = item.maDH }))
));
