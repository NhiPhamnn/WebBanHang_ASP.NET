@model ShopBanHang.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdminCT.cshtml";
}


<h3 style="margin-top:15px;margin-bottom:15px;color:#fd2500">Chỉnh Sửa Sản Phẩm</h3>
<div style="width:60%;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.maSP)

            <div class="form-group">
                Tên sản phẩm
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenSP, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Gía sản phẩm
                <div class="col-md-10">
                    @Html.EditorFor(model => model.giaSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.giaSP, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Mô tả sản phẩm
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                    @ViewBag.TB
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index3")
    </div>

</div>