@model IEnumerable<ShopBanHang.Models.HDOnline>

@{
    ViewBag.Title = "QLDonHangOnline";
    Layout = "~/Views/Shared/_LayoutAdminCT.cshtml";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NgayDat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayGiao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TinhTrang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhachHang.tenKH)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGiao)
        </td>
        <td>
            @if (item.TinhTrang == false)
            {
                <input type="checkbox" name="name" value="false" disabled="disabled" />
            }
            else
            {
                <input type="checkbox" name="name" value="true" checked="checked" disabled="disabled" />
            }
            @*@Html.DisplayFor(modelItem => item.TinhTrang)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.tenKH)
        </td>
        <td>
            
            @Html.ActionLink("Details", "XemChiTietDonHang", new { mahd=item.MaHD }) 
          
        </td>
    </tr>
}

</table>
